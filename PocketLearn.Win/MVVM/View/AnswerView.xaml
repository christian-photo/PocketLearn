<UserControl
    x:Class="PocketLearn.Win.MVVM.View.AnswerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PocketLearn.Win.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:PocketLearn.Win.MVVM.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding AnswerVM, Source={x:Static viewmodel:MainWindowVM.Instance}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Orientation="Vertical">
            <ContentControl
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Background="Transparent"
                Content="{Binding QuestionContent, Converter={StaticResource CardContentConverter}, ConverterParameter='30-400-200'}"
                FontSize="30"
                Foreground="White" />
            <ContentControl
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Background="Transparent"
                Content="{Binding AnswerContent, Converter={StaticResource CardContentConverter}, ConverterParameter='30-400-200'}"
                FontSize="30"
                Foreground="White" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Grid.Row="1"
                Foreground="White"
                Width="120"
                Height="40"
                Margin="5,5,2,2"
                Background="Gray"
                BorderThickness="0"
                Command="{Binding HardAnswer}"
                Content="Hard"
                FontSize="30"
                Style="{StaticResource ButtonHover}" />
            <Button
                Grid.Row="1"
                Foreground="White"
                Width="120"
                Height="40"
                Margin="5,5,2,2"
                Background="Gray"
                BorderThickness="0"
                Command="{Binding MediumAnswer}"
                Content="Medium"
                FontSize="30"
                Style="{StaticResource ButtonHover}" />
            <Button
                Grid.Row="1"
                Foreground="White"
                Width="120"
                Height="40"
                Margin="5,5,2,2"
                Background="Gray"
                BorderThickness="0"
                Command="{Binding OKAnswer}"
                Content="OK"
                FontSize="30"
                Style="{StaticResource ButtonHover}" />
            <Button
                Grid.Row="1"
                Foreground="White"
                Width="120"
                Height="40"
                Margin="5,5,2,2"
                Background="Gray"
                BorderThickness="0"
                Command="{Binding EasyAnswer}"
                Content="Easy"
                FontSize="30"
                Style="{StaticResource ButtonHover}" />
        </StackPanel>

    </Grid>
</UserControl>
