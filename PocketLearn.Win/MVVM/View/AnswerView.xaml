<UserControl x:Class="PocketLearn.Win.MVVM.View.AnswerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PocketLearn.Win.MVVM.View"
             xmlns:viewmodel="clr-namespace:PocketLearn.Win.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding AnswerVM, Source={x:Static viewmodel:MainWindowVM.Instance}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" Background="Transparent" Content="{Binding QuestionContent, Converter={StaticResource CardContentConverter}}" />
        <ContentControl Grid.Row="0" Background="Transparent" Content="{Binding AnswerContent, Converter={StaticResource CardContentConverter}}" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button
            Grid.Row="1"
            Width="120"
            Height="40"
            Margin="5,5,2,2"
            Background="Gray"
            BorderThickness="0"
            Command="{Binding HardAnswer}"
            FontSize="30"
            Style="{StaticResource ButtonHover}"
            Content="Hard"/>
            <Button
            Grid.Row="1"
            Width="120"
            Height="40"
            Margin="5,5,2,2"
            Background="Gray"
            BorderThickness="0"
            Command="{Binding MediumAnswer}"
            FontSize="30"
            Style="{StaticResource ButtonHover}"
            Content="Medium"/>
            <Button
            Grid.Row="1"
            Width="120"
            Height="40"
            Margin="5,5,2,2"
            Background="Gray"
            BorderThickness="0"
            Command="{Binding OKAnswer}"
            FontSize="30"
            Style="{StaticResource ButtonHover}"
            Content="OK"/>
            <Button
            Grid.Row="1"
            Width="120"
            Height="40"
            Margin="5,5,2,2"
            Background="Gray"
            BorderThickness="0"
            Command="{Binding EasyAnswer}"
            FontSize="30"
            Style="{StaticResource ButtonHover}"
            Content="Easy"/>
        </StackPanel>
        
    </Grid>
</UserControl>
